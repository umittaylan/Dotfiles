#!/usr/bin/env bash

usage(){
	sar -u 1 1 | awk 'FNR == 5 { printf "%04.1f<span color=\"#50fa7b\"><b>%</b></span>\n", (100 - $8) } '
}

temperature(){
	sensors | awk 'FNR==23{ print $0 }' | awk '{ printf "%04.1f<span color=\"#50fa7b\"><b>ÂªC</b></span>\n", $4 }'
}

echo -e "$(usage) $(temperature)"
